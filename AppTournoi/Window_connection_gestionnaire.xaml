<Window x:Name="Window_connection_gestionnaire" x:Class="AppTournoi.Window_Connection_Gestionnaire"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Connexion Gestionnaire" Height="225" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="DarkSeaGreen">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Login Gestionnaire :" Grid.Row="0" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="10"/>
        <TextBox x:Name="G_Login" Grid.Row="0" Grid.Column="1" Margin="10" Padding="5" Height="30" BorderThickness="1" BorderBrush="Gray"/>

        <TextBlock Text="Mot de Passe du Gestionnaire :" Grid.Row="1" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="10"/>
        <PasswordBox x:Name="G_Password" Grid.Row="1" Grid.Column="1" Margin="10" Padding="5" Height="30" BorderThickness="1" BorderBrush="Gray"/>

        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Connexion" Width="165" Height="45" Click="Button_save" FontSize="16" FontWeight="Bold" Background="#4682B4" BorderThickness="0" Margin="10" Cursor="Hand"/>
            <Button Content="Annuler" Width="165" Height="45" Click="Button_quit" FontSize="16" FontWeight="Bold" Background="#B22222"  BorderThickness="0" Margin="10" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
