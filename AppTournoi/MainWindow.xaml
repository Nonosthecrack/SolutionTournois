<Window x:Class="AppTournoi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppTournoi"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Height="30">
            <MenuItem x:Name="H_bddConnexion" Header="Connexion BDD" Click="H_bddConnexion_Click" Height="30"/>
            <MenuItem x:Name="H_liste" Header="Liste de tous les participants" Height="30" Click="H_liste_Click"/>
            <MenuItem x:Name="H_gestionTournois" Header="Gestion : Tournois" Height="30"/>
            <MenuItem x:Name="H_gestionSport" Header="Gestions : Sports" Height="30"/>
            <MenuItem x:Name="H_gestionParticipant" Header="Gestion : Participants" Height="30" />
            <MenuItem x:Name="H_gestionnaire" Header="Gestionnaire" Click="H_gestionnaire_Click" Height="30"/>
            <MenuItem x:Name="H_parametres" Header="Paramètres BDD" Click="H_bddParam_Click" Height="30"/>
        </Menu>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10">
                <Label Content="Tournois" FontWeight="Bold"/>
                <ListView x:Name="L_Tournois" Height="300">
                    <!--<ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock>
                                        <Run Text="{Binding intitule}" FontWeight="Bold"/>
                                        <Run Text="     "/>
                                        <Run Text="{Binding date}" FontWeight="Bold"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>-->
                </ListView>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10">
                <Label Content="Sports" FontWeight="Bold"/>
                <ListView x:Name="L_Sports" Height="300">
                    <!--<ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock>
                                    <Run Text="{Binding intitule}" FontWeight="Bold"/>
                                    <Run Text="     "/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>-->
                </ListView>
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="10">
                <Label Content="Participants" FontWeight="Bold"/>
                <ListView x:Name="L_Participants" Height="300">
                    <!--<ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock>
                                    <Run Text="{Binding prenom}" FontWeight="Bold"/>
                                    <Run Text="     "/>
                                    <Run Text="{Binding nom}" FontWeight="Bold"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>-->
                </ListView>
            </StackPanel>

            <StackPanel Grid.Column="3" Margin="10">
                <Label Content="Nom :"/>
                <TextBox x:Name="A_nom" Width="200"/>
                <Label Content="Prénom :"/>
                <TextBox x:Name="A_prenom" Width="200"/>
                <Label Content="Tournoi :"/>
                <TextBox x:Name="A_tournoi" Width="200"/>
                <Label Content="Sport :"/>
                <TextBox x:Name="A_sport" Width="200"/>
                <Label Content="Téléphone :"/>
                <TextBox x:Name="A_telephone" Width="200"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
