<Window x:Name="gestion_sport" x:Class="AppTournoi.Window_gestion_sport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Ajout d'un nouveau membre du personnel" MaxHeight="200" MaxWidth="425" MinHeight="200" MinWidth="425" Width="425" Height="200" WindowStartupLocation="CenterScreen">
    <Grid Background="DarkSeaGreen">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="intitulé du Sport" Grid.Row="0" Grid.Column="0" FontWeight="Bold" Width="110" Height="25"/>
        <TextBox x:Name="I_Sport"  Grid.Row="0" Grid.Column="1" Width="auto" Height="25" Margin="10"/>

        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="50">
            <Button Content="Ajouter" Width="165" Height="40" Click="Button_save" FontSize="16" FontWeight="Bold" Background="#4682B4" BorderThickness="0" Margin="10" Cursor="Hand"/>
            <Button Content="Annuler" Width="165" Height="40" Click="Button_quit" FontSize="16" FontWeight="Bold" Background="#B22222"  BorderThickness="0" Margin="10" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>